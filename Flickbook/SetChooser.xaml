<Window x:Class="Flickbook.SetChooser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Title="SetChooser" Height="400" Width="300">
    <Grid>
        <ListView Margin="12,12,12,41" Name="photoSetsListView" ItemsSource="{Binding Path=PhotoSets}" SelectionMode="Single">
            <ListView.Resources>
                <Style x:Key="NoHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{DynamicResource NoHeaderStyle}">
                    <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Title}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ProgressBar Height="23" Margin="12,0,0,12" Name="progressBar" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="173" IsIndeterminate="False" Visibility="Hidden" />
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="importSet" VerticalAlignment="Bottom" Width="75" IsEnabled="False" Click="importSet_Click">
            Import Set
        </Button>
    </Grid>
</Window>
